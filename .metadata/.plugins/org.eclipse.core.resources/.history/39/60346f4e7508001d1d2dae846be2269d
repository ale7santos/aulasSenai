package aulas;

import java.util.Scanner;

public class conversorDeTemperatura {

	public static void main(String[] args) {
		/*•Faça
		um Programa que peça a temperatura em graus Fahrenheit, transforme e mostre a
		temperatura em graus Celsius.*/
		
		double celsius = 0;
		double fahrenheit = 0;
		double mult = 1.8;
		
		double conversao = celsius * mult + 32;
		conversao = fahrenheit;
				
		Scanner leia = new Scanner(System.in);
		
		System.out.println("Digite a temperatura em graus Celsius: ");
		celsius = leia.nextDouble();
		
		System.out.println("Digite a temperatura em Fahrenheit: ");
		fahrenheit = leia.nextDouble() ;
		
		System.out.println("A conversão de Celsius para Fahrenheit é: " + conversao);
		
		
		

	}

}
