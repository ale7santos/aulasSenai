package aulas;

import java.util.Scanner;

public class PrimeiraCondicional {

	public static void main(String[] args) {

		Scanner leia = new Scanner(System.in);

		int a = 10;
		int b = 20;
		int c = 10;

		double d = 10.0;

		boolean v = true;
		boolean f = false;

		/*
		 * if () { System.out.println("Sim"); }else { System.out.println("Não!"); int
		 * ano = 2020;
		 * 
		 * if(ano % 4 == 0) { System.out.println("A variável A é par"); }else {
		 * System.out.println("É impar");
		 */

		System.out.println("Entre com a nota: ");
		d = leia.nextDouble();

		if (d > 0.0 && d < 10.0) {
			System.out.println("Nota válida");
		} else {
			System.out.println("Entre com um valor entre 0 e 10");
			System.out.println("Entre com a nota: ");
			d = leia.nextDouble();
			
			if(d < 0.0 && d> 10.00) {
				System.out.println("Jegue");
			}else {
				System.out.println("Nota válida!");
			}
		}
		leia.close();
	}
}
