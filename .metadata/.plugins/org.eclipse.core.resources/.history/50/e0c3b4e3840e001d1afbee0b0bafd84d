package aulasJulho;

import java.util.Scanner;

public class SistemaVotos {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Digite (1) para votar em Molusco: ");
		System.out.print("Digite (2) para votar em Nelson: ");
		System.out.print("Digite (3) para votar em Gomes: ");
		System.out.print("Digite (4) para votar em Bolim: ");
		
		int voto = sc.nextInt();
		
		while (voto >= 0) {
			System.out.println("Vote novamente");
			voto = sc.nextInt();
			
			if (voto == 1) {
				System.out.println("Voto em Molusco computado!");
			}else if(voto == 2) {
				System.out.println("Voto em Nelson computado!");
			}else if(voto == 3) {
				System.out.println("Voto em Gomes computado!");
			}else if(voto == 4){
				System.out.println("Voto em Bolim computado!");
		}else {
			System.out.println("Votação encerrada!");
		}
		System.out.println("Programa finalizado!");
		
		sc.close();
		}
	}
}
	

